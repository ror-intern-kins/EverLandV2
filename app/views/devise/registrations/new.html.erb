<!DOCTYPE html>
<html>
  <head>
    <title>EverLandV2</title>   
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">  
        I18n.defaultLocale = "<%= I18n.default_locale %>"
        I18n.locale = "<%= I18n.locale || I18n.default_locale %>"
    </script> 
  </head>
  <body>
    <div class="container">
        <div class="row tung-form">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div id="wrapper">
                    <div id="register">        
                    <%= form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "form_register"} do |form| %> <!-- form đăng ký -->
                        <h1><%= t "registry.registry_title" %></h1>
                        <p class="notice"><%= notice %></p>
                        <p class="alert"><%= alert %></p>
                        <div class="row">
                            <label><%= t "login.username_label" %></label> 
                            <span class="obli">(*)</span> <br/>
                            <%= form.text_field :username, class: 'tung-input form-control', id: :signup_username, onchange: 'checkUsername()' %>
                            <p id="errorUser" class='error'></p>
                            <p id="successUser" class='success'></p>
                        </div>                 
                        <div class="row">
                            <label><%= t "registry.email_label" %></label> 
                            <span class="obli">(*)</span> <br/>
                            <%= form.text_field :email, class: 'tung-input form-control', id: :signup_email, onchange: 'checkEmail()' %>
                            <p id="errorEmail" class='error'></p>
                            <p id="successEmail" class='success'></p>
                        </div>
                        
                        <div class="row">
                            <label><%= t "login.password_label" %></label>
                             <span class="obli">(*)</span> <br/>
                            <%= form.password_field :password, class: 'tung-input form-control', id: :signup_password, onchange: 'checkPassword()' %>
                            <p id="errorPass" class='error'></p>
                        </div>
                        
                        <div class="row">
                            <label><%= t "registry.confirm_password_label" %></label>
                            <span class="obli">(*)</span> <br/>
                            <%= form.password_field :password_confirmation, class: 'tung-input form-control',
                                id: :signup_password_confirmation, onchange: 'checkPasswordConfirm()' %>
                            <p id="errorPasswordConfirm" class='error'></p>
                        </div>                       
                        
                        <div class="row">
                            <label><%= t "registry.fullname_label" %></label>
                            <span class="obli">(*)</span> <br/>
                            <%= form.text_field :name, class: 'tung-input form-control', id: :signup_name, onchange: 'checkName()' %>
                            <p id="errorName" class='error'></p>
                        </div>

                        <div class="row">
                            <label><%= t "registry.phonenum_label" %></label>
                             <br/>
                            <%= form.text_field :phone, class: 'tung-input form-control', id: :signup_phone, onchange: 'checkPhone()' %>
                            <p id="errorPhone" class='error'></p>
                        </div>
                        
                        <div class="row">
                            <label><%= t "registry.birthday_label" %></label>
                            <br/>
                            <%= form.date_field :birthday, class: "tung-input form-control" %>
                        </div>
                        <br/>
                        <div class="row">
                            <label class="container-radio"><%= t "registry.sex_male" %>
                                <%= form.radio_button :gender, 'male', checked: true %>
                                <span class="checkmark"></span>
                            </label>
                            <label class="container-radio"><%= t "registry.sex_female" %>
                                <%= form.radio_button :gender, 'female' %>
                                <span class="checkmark"></span>
                            </label>                            
                        </div>
                        <br/>
                        <div class="row">
                            <label><%= t "registry.address_label" %></label>
                            <br/>
                            <%= form.text_field :address, class: 'tung-input form-control', id: :user_address %>
                        </div>
                        <br/>
                        <div class="row">
                            <label class="container-radio"><%= t "registry.type_personal" %>
                                <%= form.radio_button :personal, 'true', checked: true %>
                                <span class="checkmark"></span>
                            </label>
                            <label class="container-radio"><%= t "registry.type_company" %>
                                <%= form.radio_button :personal, 'false' %>
                                <span class="checkmark"></span>
                            </label>                          
                        </div>
                        <br/>                                              
                        <div class="row">
                            <div class="col-md-12" style="padding: 30px 0px">
                            <%= form.submit (t "login.registry_button"), id: 'signup_btn', class: 'col-md-12 btn btn-dark tung-btn-form', :type => 'button', onclick: 'validateSignupForm()'%>
                            <!-- , :type => 'button', onclick: 'validateSignupForm()' -->
                            </div>
                        </div>                                                                                                  
                        <h6 style="text-align: center">
                            <%= link_to (t "login.back_to_home"), root_path, style: 'color: #006064' %>
                        </h6>
                        <p class="change_link" style="margin-top: 40px">  
                            <%= t "registry.login_question" %>
                        <%= link_to  (t "registry.login_button"), new_user_session_path, onclick: 'resetLoginForm()'%>
                        </p>
                    <% end %>
                    </div>
                </div>  
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

  </body>
</html>

