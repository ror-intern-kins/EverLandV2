
<div style="background-color: gainsboro">
<div class="container">
    <div id="tung-div-search" class="row">
        <%= render 'search'%>
    </div>
    <div class="container">
    <div class="row">
        <h3 class="post-noti col-md-12"><%= flash[:noti] %></h3> 
    </div>
</div>
<% if !@posts.present? %>    
<div class="container">
    <div class="row">
        <h3 class="post-noti col-md-12">Không tìm thấy kết quả nào</h3> 
    </div>
</div>
<% else %>
    <div class="container">
        <div id="tung-div-show" class="row">
            <% @posts.each do |post|%>
                <div class="post-member col-md-6 col-lg-4">
                    <div class="container pmb-detail">
                        <div class="row">
                            <div class="pmb-header">
                                <div class="pmb-date">
                                    <p class="day"><%= post.created_at.day %></p>
                                    <p class="month">Tháng <%= post.created_at.month  %></p>
                                </div>
                                <div>
                                <%= link_to post.title, post_path(post.id), class: 'pmb-title'%>
                                </div>
                            </div>
                            <div class="pmb-img"
                            style="background-image: url(<%= asset_url !(post.images.empty?)?(post.images.first.url):("default.jpg") %>)">
                            </div> 
                                                            
                            <div class="pmb-content">
                                <div>  
                                    <p>
                                        <span>Giá:</span>
                                        <% if post.unit == 'Thỏa Thuận'%>
                                            <span>Thỏa thuận</span>
                                        <% else %>
                                            <span><%= post.price %> <%= post.unit%></span>
                                        <% end %>
                                    </p>
                                    <p>
                                        <span>Diện tích:</span>
                                        <span><%= post.area %> m²</span>
                                    </p>
                                    <p>
                                        <span>Địa chỉ:</span>
                                        <span><%= post.address_number %></span>
                                    </p>
                                </div>                    
                            </div>
                        </div>
                    </div>
                </div>     
            <% end %>
        </div>
    </div>

    <%= paginate @posts, theme: 'twitter-bootstrap-4', outer_window: 3 %>
    
<% end %>
</div>

</div>