<%= link_to  "Logout", logout_path, class: 'btn btn-success' %>
<%= link_to 'Đăng nhập', '#loginForm', class: 'btn btn-success', onclick: 'resetLoginForm()',
 data: { toggle: 'modal' } %>
     
<!-- Modal login -->
<div class="modal fade" id="loginForm">
    <div class="modal-dialog" class="container">
        <div class="modal-content" class="container_demo" style="border: 0px; background-color: inherit">
            <div id="wrapper">
                <div id="login" class="animate form">                    
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="closeB" aria-hidden="true">&times;</span>
                    </button>
                    <%= form_for(:session, url: login_path, html: {id: 'login_form'}, method: 'post') do |form| %>   <!-- form đăng nhập -->
                        <h1>Đăng nhập </h1>                                 
                    <p>
                        <%= form.label ('Tên đăng nhập:'), class: 'uname' %> <br/>
                        <%= form.text_field :username %> <br/>
                        <p id="errorUsername" class='error' ></p>
                    </p>   
                    <p>
                        <%= form.label ('Mật khẩu:'), class: 'youpasswd' %> <br/>
                        <%= form.password_field :password %> <br/>
                        <p id="errorPassword" class='error'></p>
                    </p>
                    <p id="invalid" class='error'>
                       
                    </p>
                    <p class="login button"> 
                        <%= form.submit ('Đăng nhập'),  id: 'login_btn', :type => 'button', onclick: 'validateLoginForm()' %>
                    </p>

                    <p class="change_link">
                        Bạn đã đăng kí thành viên chưa?
                        <%= link_to  "Đăng kí", '#', id: 'signupl', onclick: 'resetSignupForm()',
                            data: { toggle: 'modal', dismiss: 'modal', target: '#signupForm' } %>
                    </p>
                    <% end %>            
                </div>                    
            </div>
        </div>             
    </div>
</div>  

<!-- Modal signup -->
<div class="modal fade" id="signupForm">
    <div class="modal-dialog" class="container">
        <div class="modal-content" class="container_demo" style="border: 0px; background-color: inherit">
            <div id="wrapper"> 
                <div id="register" class="animate form">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="closeB" aria-hidden="true">&times;</span>
                    </button>

                    <%= form_with(local: true, id: 'register_form', url: users_path ) do |form| %> <!-- form đăng ký -->
                        <h1>Đăng ký</h1>
                        <p >
                            <%= form.label ('Tên đăng nhập ') %> <span>(*)</span> <br/>
                            <%= form.text_field :username, id: :user_username %>
                            <p id="errorUser" class='error'></p>
                        </p>
                      
                        <p>
                            <%= form.label ('Địa chỉ email ') %> <span>(*)</span> <br/>
                            <%= form.text_field :email, id: :user_email %>
                            <p id="errorEmail" class='error'></p>
                        </p>
                      
                        <p>
                            <%= form.label ('Mật khẩu ') %> <span>(*)</span> <br/>
                            <%= form.password_field :password, id: :user_password %>
                            <p id="errorPass" class='error'></p>
                        </p>
                      
                        <p>
                            <%= form.label ('Xác thực mật khẩu ') %> <span>(*)</span> <br/>
                            <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
                            <p id="errorPasswordConfirm" class='error'></p>
                        </p>
                      
                        <p>
                            <%= form.label ('Điện thoại di động ') %> <span>(*)</span>  <br/>
                            <%= form.text_field :phone, id: :user_phone %>
                            <p id="errorPhone" class='error'></p>
                        </p>
                      
                        <p>
                            <%= form.label ('Tên đầy đủ ') %> <span>(*)</span> <br/>
                            <%= form.text_field :name, id: :user_name %>
                            <p id="errorName" class='error'></p>
                        </p>
                      
                        <p>
                            <%= form.label ('Ngày sinh ') %> <br/>
                            <%= form.date_select :birthday, id: :user_birthday %>
                        </p>
                      
                        <p>
                            <%= form.radio_button :gender, 'male', checked: true %> <label> Nam</label>
                            <%= form.radio_button :gender, 'female' %> <label> Nữ</label>
                        </p>
                      
                        <p>
                            <%= form.label ('Địa chỉ ') %> <br/>
                            <%= form.text_field :address, id: :user_address %>
                        </p>
                      
                        <p>
                            <%= form.radio_button :personal, 'true', checked: true %> <label>Cá nhân</label> 
                            <%= form.radio_button :personal, 'false' %> <label>Công ty</label> 
                        </p>
                      
                        <p class="signin button">
                            <%= form.submit ('Đăng ký'), id: 'signup_btn', :type => 'button', onclick: 'validateSignupForm()' %>
                        </p>
                        <p class="change_link">  
                            Bạn đã là thành viên?
                        <%= link_to  " Trở lại đăng nhập ", '#', onclick: 'resetLoginForm()',
                            data: { toggle: 'modal', dismiss: 'modal', target: '#loginForm' } %>
                        </p>
                    <% end %>
                </div>
            </div>                    
        </div>
    </div>
</div>