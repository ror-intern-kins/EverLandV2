<%= form_with(model: @user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label ('Tên đăng nhập:') %>
    <%= form.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= form.label ('Địa chỉ email:') %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label ('Mật khẩu:') %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
      <%= form.label ('Xác thực mật khẩu:') %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.label ('Điện thoại di động:') %>
    <%= form.text_field :phone, id: :user_phone %>
  </div>

  <div class="field">
    <%= form.label ('Tên đầy đủ:') %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label ('Ngày sinh:') %>
    <%= form.date_select :birthday, id: :user_birthday %>
  </div>

  <div class="field">
      <%= form.radio_button :gender, 'male', checked: true %> Nam
      <%= form.radio_button :gender, 'female' %> Nữ
    </div>

  <div class="field">
    <%= form.label ('Địa chỉ:') %>
    <%= form.text_field :address, id: :user_address %>
  </div>

  <div class="field">
    <%= form.radio_button :personal, 'true', checked: true %> Cá nhân
    <%= form.radio_button :personal, 'false' %> Công ty
  </div>

  <div class="actions">
    <%= form.submit ('Đăng ký') %>
  </div>
<% end %>

<script type="text/javascript">
  <%= render "validate.js" %>
</script>